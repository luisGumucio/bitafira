<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewBTDeviceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispositivo Bluetooth"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/spinnerBluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:id="@+id/textViewFramesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frecuencia" />

            <TextView
                android:id="@+id/textViewFrames"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:text="1000" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:id="@+id/textViewFramesLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canal" />

            <TextView
                android:id="@+id/textViewFrames2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:text="ECG" />

        </LinearLayout>
        <Button
            android:id="@+id/button_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Buscar"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/bt_save_bluetooth"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Guardar"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>